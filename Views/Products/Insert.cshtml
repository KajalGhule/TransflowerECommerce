@{
    ViewData["Title"] = "Product Insert Page";
}

 <link rel="stylesheet" href="~/css/Style.css" />


<div class="data">
<h1>Insert Product</h1>

<form action="/products/insert" method="post">

    <table>
    <tr>
    <td>Product id:</td>
    <td><input type="text" name="id" placeholder="Product id"/></td>
    </tr>

     <tr>
    <td>Name:</td>
    <td><input type="text" name="title" placeholder="Product Name"/></td>
    </tr>

     <tr>
    <td>Description:</td>
    <td><input type="text" name="description" placeholder="Product Description"/></td>
    </tr>

     <tr>
    <td>UnitPrice:</td>
    <td><input type="text" name="unitprice" placeholder="Product unitprice"/></td>
    </tr>

     <tr>
    <td>Quantity:</td>
    <td><input type="text" name="quantity" placeholder="Product quantity"/></td>
    </tr>

     <tr>
    <td>Image:</td>
    <td><input type="text" name="image" placeholder="Product image"/></td>
    </tr>

     <tr>
    <td></td>
    <td><input type="submit" class="submitButton" name="btn" value=" Insert "/></td>
    </tr>

    </table>
    </form>

</div>
